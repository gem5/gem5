import os

Import('env')

sf_env = env.Clone()
if sf_env['GCC']:
    sf_env.Append(CCFLAGS=['-Wno-unused-variable',
                           '-Wno-unused-label',
                           '-Wno-implicit-fallthrough',
                           '-g'])

elif sf_env['CLANG']:
    sf_env.Append(CCFLAGS=['-Wno-unused-variable',
                           '-Wno-unused-label',
                           '-g'])

