Import('*')

SimObject('Bridge.py')
SimObject('Bus.py')
SimObject('MemObject.py')

Source('bridge.cc')
Source('bus.cc')
Source('mem_object.cc')
Source('packet.cc')
Source('port.cc')
Source('tport.cc')
Source('mport.cc')

if env['TARGET_ISA'] != 'no':
    SimObject('PhysicalMemory.py')
    Source('dram.cc')
    Source('physical.cc')

if env['FULL_SYSTEM']:
    Source('vport.cc')
elif env['TARGET_ISA'] != 'no':
    Source('page_table.cc')
    Source('translating_port.cc')

TraceFlag('Bus')
TraceFlag('BusAddrRanges')
TraceFlag('BusBridge')
TraceFlag('LLSC')
TraceFlag('MMU')
TraceFlag('MemoryAccess')

TraceFlag('ProtocolTrace')
TraceFlag('RubyCache')
TraceFlag('RubyDma')
TraceFlag('RubyGenerated')
TraceFlag('RubyMemory')
TraceFlag('RubyNetwork')
TraceFlag('RubyQueue')
TraceFlag('RubyPort')
TraceFlag('RubySlicc')
TraceFlag('RubyStorebuffer')
TraceFlag('RubyTester')

CompoundFlag('Ruby', [ 'RubyQueue', 'RubyNetwork', 'RubyTester',
    'RubyGenerated', 'RubySlicc', 'RubyStorebuffer', 'RubyCache', 
    'RubyMemory', 'RubyDma'])
